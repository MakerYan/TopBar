<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.timen4.ronnny.topbar.MainActivity">

    <com.timen4.ronnny.topbar.widget.TopBar
        android:id="@+id/topBar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        custom:title="自定义标题dddddddddddddddddddddd"
        custom:myTitleTextSize="20sp"
        custom:myTitleTextColor="@android:color/black"
        custom:leftTextColor="@android:color/holo_red_dark"
        custom:rightText="right"
        custom:leftText="上一张"
        custom:leftBackground="@android:color/holo_green_light"
        />

    <TextView
        android:layout_alignBottom="@id/topBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
</LinearLayout>
